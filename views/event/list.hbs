<h1>Event list</h1>

<div id="map-container" ></div>

<button id="user-location">Locate Me</button>

<ul>
  {{#each events}}
    {{> eventitem}}
  {{/each}}
</ul>


<script>
  function initMap() {
    const events = {{{json events}}};

    const $userLocation = document.getElementById('user-location');
        
    const $mapContainer = document.getElementById('map-container');

    const map = new window.google.maps.Map($mapContainer, {
      center: {lat: 38.74, lng: -9.14 },
      zoom: 10
    });

    const markers = [];

    for (let event of events) {
      const marker = new window.google.maps.Marker({
        map,
        position: {
          lat: event.location.coordinates[1],
          lng: event.location.coordinates[0]
        }
      });

      markers.push(marker);

      marker.addListener('click', () => {
        const endpoint = `${event._id}`;
        window.location = endpoint;
      })
    };

    let userLatitude;
    let userLongitude;

    $userLocation.addEventListener('click', () => {
      navigator.geolocation.getCurrentPosition(result => {
        userLatitude = result.coords.latitude;
        userLongitude = result.coords.longitude;
        console.log(userLatitude, userLongitude);
      }, error => {
        console.log(error);
      });
    })

    const userLocation = new window.google.maps.Marker({
      map,
      position: {
        lat: Number(userLatitude),
        lng: Number(userLongitude)
      } 
    })
    
    console.log('user location is', userLocation)

    markers.push(userLocation);
    

  }

</script>

{{> mapscript}}